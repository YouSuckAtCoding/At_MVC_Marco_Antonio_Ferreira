@model IEnumerable<GuitarraPresentationModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<form asp-action="Index">
    <label>Busca:</label>
    <input type="text" name="search" />
    <label>Ordenação:</label>
    <input type="checkbox" name="orderAscendant" value="true" />
    <input type="submit" value="Go!!!" />
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EquipNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MarcaEquip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EquipType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guitarrista)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EquipNome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MarcaEquip)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EquipType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Guitarrista.Nome)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
